<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.*?>
<HBox xmlns:fx="http://javafx.com/fxml/1"
      prefHeight="650.0"
      prefWidth="1200.0"
      stylesheets="@../css/main-chat.css"
      xmlns="http://javafx.com/javafx/24.0.1"
      fx:controller="com.vtaveira.ui.controller.MainChatController"
>
  <Pane maxWidth="-Infinity"
        minWidth="565.0"
        styleClass="chat-history"
        HBox.hgrow="ALWAYS"
  >
  </Pane>
  <VBox fx:id="chatContainer"
        HBox.hgrow="ALWAYS"
  >
    <HBox alignment="CENTER_LEFT"
          nodeOrientation="LEFT_TO_RIGHT"
          prefHeight="64.0"
          spacing="12.0"
          styleClass="friend-profile-header"
    >
      <padding>
        <Insets left="12.0"/>
      </padding>
      <Circle fill="DODGERBLUE"
              radius="20.0"
              stroke="BLACK"
              strokeType="INSIDE"
              strokeWidth="0.0"
      />
      <VBox alignment="CENTER_LEFT"
            prefHeight="200.0"
            prefWidth="100.0"
      >
        <Text fill="#0a0a0a"
              fontSmoothingType="LCD"
              strokeType="OUTSIDE"
              strokeWidth="0.0"
              text="Victor Rodrigues"
              textAlignment="CENTER"
        >
          <font>
            <Font name="Segoe UI"
                  size="16.0"
            />
          </font>
        </Text>
        <Text fill="#00000099"
              fontSmoothingType="LCD"
              strokeType="OUTSIDE"
              strokeWidth="0.0"
              text="Clique para mostrar dados do contato"
              textAlignment="CENTER"
        >
          <font>
            <Font name="Segoe UI"
                  size="13.0"
            />
          </font>
        </Text>
      </VBox>
    </HBox>
    <Pane VBox.vgrow="ALWAYS"/>
    <HBox alignment="CENTER"
          styleClass="input-field-container"
    >
      <VBox.margin>
        <Insets bottom="10.0"
                left="10.0"
                right="10.0"
                top="10.0"/>
      </VBox.margin>
      <TextField fx:id="messageInput"
                 focusTraversable="false"
                 promptText="Digite uma mensagem"
                 styleClass="text-field"
                 HBox.hgrow="ALWAYS"
      >
        <font>
          <Font name="Segoe UI"
                size="12.0"/>
        </font>
      </TextField>
      <Button alignment="CENTER"
              contentDisplay="CENTER"
              styleClass="send-button"
              textAlignment="CENTER"
      >
        <graphic>
          <SVGPath content="M5.4 19.425C5.06667 19.5583 4.75 19.5291 4.45 19.3375C4.15 19.1458 4 18.8666 4 18.5V14L12 12L4 9.99997V5.49997C4 5.1333 4.15 4.85414 4.45 4.66247C4.75 4.4708 5.06667 4.44164 5.4 4.57497L20.8 11.075C21.2167 11.2583 21.425 11.5666 21.425 12C21.425 12.4333 21.2167 12.7416 20.8 12.925L5.4 19.425Z"
                   styleClass="send-icon"/>
        </graphic>
      </Button>
    </HBox>
  </VBox>
</HBox>
