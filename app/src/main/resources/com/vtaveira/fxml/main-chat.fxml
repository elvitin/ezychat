<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import com.vtaveira.ui.components.OpenedChat?>
<?import com.vtaveira.ui.components.ChatMessage?>


<HBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      stylesheets="@../css/main-chat.css"
      fx:controller="com.vtaveira.ui.controller.MainChatController"
      prefHeight="650.0"
      prefWidth="800.0"
>
  <ScrollPane>
    <VBox fx:id="chatHistory"
          styleClass="profile-container">
      <OpenedChat username="Victor Rodrigues"
                  spoilerContent="Victor é um excelente programador"/>
      <OpenedChat username="Emily Taveira"
                  spoilerContent="Emilly é foda no que faz"/>
    </VBox>
  </ScrollPane>
  <VBox fx:id="chatContainer"
        HBox.hgrow="ALWAYS"
  >
    <HBox styleClass="friend-profile-header"
          nodeOrientation="LEFT_TO_RIGHT"
          prefHeight="-Infinity"
          minWidth="0"
    >
      <Circle fill="DODGERBLUE"
              radius="20.0"
              stroke="BLACK"
              strokeType="INSIDE"
              strokeWidth="0.0"
      />
      <VBox alignment="CENTER_LEFT">
        <Text fill="#0a0a0a"
              fontSmoothingType="LCD"
              strokeType="OUTSIDE"
              strokeWidth="0.0"
              text="Victor Rodrigues"
              textAlignment="CENTER"
        >
          <font>
            <Font name="Segoe UI"
                  size="16.0"
            />
          </font>
        </Text>
        <Text fill="#00000099"
              fontSmoothingType="LCD"
              strokeType="OUTSIDE"
              strokeWidth="0.0"
              text="Clique para mostrar dados do contato"
              textAlignment="CENTER"
        >
          <font>
            <Font name="Segoe UI"
                  size="13.0"
            />
          </font>
        </Text>
      </VBox>
    </HBox>
    <ScrollPane VBox.vgrow="ALWAYS">
      <VBox fx:id="messagesContainer">

        <ChatMessage isFromMe="false"
                     content="Vem almoçar filhão"/>
        <ChatMessage isFromMe="true"
                     content="Já vou mãe"/>
        <ChatMessage isFromMe="false"
                     content="Não demora hein"/>
        <ChatMessage isFromMe="true"
                     content="rsrrs"/>

      </VBox>
    </ScrollPane>
    <HBox styleClass="input-field-container"
          alignment="CENTER">
      <VBox.margin>
        <Insets bottom="10.0"
                left="10.0"
                right="10.0"/>
      </VBox.margin>
      <TextField fx:id="messageInput"
                 focusTraversable="false"
                 promptText="Digite uma mensagem"
                 styleClass="text-field"
                 HBox.hgrow="ALWAYS"
      >
        <font>
          <Font name="Segoe UI"
                size="12.0"/>
        </font>
      </TextField>
      <Button fx:id="sendButton"
              alignment="CENTER"
              contentDisplay="CENTER"
              styleClass="send-button"
              textAlignment="CENTER"
      >
        <graphic>
          <SVGPath content="M5.4 19.425C5.06667 19.5583 4.75 19.5291 4.45 19.3375C4.15 19.1458 4 18.8666 4 18.5V14L12 12L4 9.99997V5.49997C4 5.1333 4.15 4.85414 4.45 4.66247C4.75 4.4708 5.06667 4.44164 5.4 4.57497L20.8 11.075C21.2167 11.2583 21.425 11.5666 21.425 12C21.425 12.4333 21.2167 12.7416 20.8 12.925L5.4 19.425Z"
                   styleClass="send-icon"/>
        </graphic>
      </Button>
    </HBox>
  </VBox>
</HBox>
